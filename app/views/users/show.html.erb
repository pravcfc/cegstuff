<br />
<%= gravatar_for @user %>
<h2><%= @user.name %></h2>
<% flash.each do |key, value| %>
        <h4><%= value %></h4>
      <% end %>
     <br />
     <%= link_to "Edit Profile", edit_user_path %>
     <% if @posts.any? %>
     	<h2> Posts (<%= @posts.count %>)</h2>
     	<center>
     		<table>
     			<% @posts.each do |p|  %>
     			<tr>
     				<td><%= link_to p.title, p %></td>
     				<td><%= p.text %></td>
                   <td> Posted <%= time_ago_in_words p.created_at %> ago. </td>
     			</tr>
     			<% end %>
                
     		</table>
     		
     	</center>
        <%= will_paginate @posts %>
     <% end %>
