<br />
<%= gravatar_for @user %>
<h2><%= @user.name %></h2>
 <%= link_to "Edit Profile", edit_user_path, class: 'edit-profile' %>
<%= render 'layouts/stats' %>
     <div class="span8">
        <%= render 'follow_form' if signed_in? %>
     </div>
     <div class="row">
     <% if @posts.any? %>
     	<h2> Posts (<%= @posts.count %>)</h2>
     	<center>
     			<% @posts.each do |p|  %>
                 <div class="row">
     				<%= link_to p.title, p %><br>
                    Posted <%= time_ago_in_words p.created_at %> ago. 
                </div>
     			<% end %>
     	</center>
        <%= will_paginate @posts %>
     <% end %>
     </div>
