<br />
<h2>Update your profile</h2>


    <%= form_for :user, :url => { :action => "update" }, :html => { :method => 'patch' } do |f| %>

    <%= render 'layouts/errormessages' %>
      
      <%= f.label :name, "Username" %>
      <%= f.text_field :name %><br /><br />

      <%= f.label :email %>
      <%= f.text_field :email %><br /><br />

      <%= f.label :password %>
      <%= f.password_field :password %><br /><br />

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %><br /><br />

      <%= f.submit "Save changes" %><br /><br />
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
